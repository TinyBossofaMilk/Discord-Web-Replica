extends layout

block content
    include channel-side-bar
    //- div.title #{channel.name}
    
    each message in channel.messages
        .message #{message.text}
        //- .user Username #{message.user.username}
        //- .user Username: #{message.user}
        .date #{message.date}
        .upvote #{message.upvote.length}

    else 
        div No messages! Be the first to add one!

    form.add-message(method="POST" action="") 
        div.form-group
            label(for="msg") Message
            input#msg(name="msg" placeholder="Add a message here!" type="text")

            button(type="submit") Submit