extends layout

block content 
    include dm-side-bar

    nav#friends-management
        a(href='/friends') All
        a(href='/friends/blocked') Blocked
        a(href='/friends/pending') Pending 
        a(href='/friends/send-request') Add Friend
    
    br

    div FRIENDS PAGE YO
    for friend in friends_list
        form(method="post" action="/accept-friend-req")
            div #{friend.username}
            input(type="text" value=friend._id hidden= true)
            button(type="submit" name="accept") Accept
            button(type="submit" name="decline") Decline
