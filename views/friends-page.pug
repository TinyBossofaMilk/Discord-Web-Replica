extends layout

block content 
    include dm-side-bar
    include friends-nav-bar
    
    br

    each friend in friends_list
        form(method="post" action="")
            div #{friend.username}
            input(type="text" name="userID" value=friend._id hidden=true)
            button(type="submit" name="accept" formaction="/friends/remove-friend") Remove Friend
            button(type="submit" name="decline" formaction="/friends/block-friend") Block
        br

    else 
        div You have no friends!
